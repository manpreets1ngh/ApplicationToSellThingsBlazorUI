@inherits LayoutComponentBase
@inject IState<AuthState> AuthState

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<PageTitle>ApplicationToSellThings.BlazorUI</PageTitle>

<div class="page">
    @if (AuthState.Value.IsAuthenticated && AuthState.Value.UserRoles.Contains("Admin"))
    {
        <MudLayout>
            <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="4" Variant="DrawerVariant.Mini">
                <MudDrawerHeader>
                    <MudText Typo="Typo.h6">Admin Panel</MudText>
                </MudDrawerHeader>
                <MudNavMenu>
                    <MudNavLink Href="/admin/dashboard" Icon="dashboard" Match="NavLinkMatch.All">Dashboard</MudNavLink>
                    <MudNavLink Href="products" Icon="store">Products</MudNavLink>
                    <MudNavLink Href="orders" Icon="shopping_cart">Orders</MudNavLink>
                    <MudNavLink Href="customers" Icon="people">Customers</MudNavLink>
                    <MudNavLink Href="reports" Icon="bar_chart">Reports</MudNavLink>
                    <MudNavLink Href="marketing" Icon="campaign">Marketing</MudNavLink>
                    <MudNavLink Href="settings" Icon="settings">Settings</MudNavLink>
                    <MudNavLink Href="support" Icon="support">Support</MudNavLink>
                </MudNavMenu>
            </MudDrawer>

        </MudLayout>
    }
    else
    {
        <NavMenu />
    }
    
    <main class="container">
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

